<%- include('../../partials/header.ejs') %>
<%- include('../../partials/navbar.ejs') %>

<div class="container">
    <h2 class="mt-3">Categories</h2>
    <a class="btn btn-success mb-3" href="/admin/categories/new">
        Create new category
    </a>

    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Title</th>
                <th>Slug</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% categories.forEach(category => { %>
                <tr>
                    <th class="align-middle"><%= category.id %></th>
                    <th class="align-middle"><%= category.title %></th>
                    <th class="align-middle"><%= category.slug %></th>
                    <th class="text-center">
                        <form class="d-inline-flex mt-1 actions-form" action="">
                            <input type="hidden" name="id" value="<%= category.id %>">
                            <button class="btn btn-info text-light">Edit</button>
                        </form>

                        <form class="d-inline-flex mt-1 actions-form" method="POST" action="/categories/delete">
                            <input type="hidden" name="id" value="<%= category.id %>">
                            <button class="btn btn-danger text-light">Delete</button>
                        </form>
                    </th>
                </tr>
            <% }) %>
        </tbody>
    </table>
</div>

<script src="/js/admin/categories/index.js"></script>
<%- include('../../partials/footer.ejs') %>