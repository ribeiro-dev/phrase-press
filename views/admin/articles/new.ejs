<%- include('../../partials/header') %>
<%- include('../../partials/navbar') %>

<div class="container">
    <div class="card mt-5">
        <div class="card-header">
            <h2 class="">Article Register</h2>
        </div>

        <div class="card-body">
            <form method="POST" action="/articles/save">
                <input class="form-control mb-3" type="text" name="title" placeholder="New article title">
                <select class="form-control mb-3" name="category" id="category">
                    <option value="" selected disabled>Select the category</option>
                    <% categories.forEach(category => { %>
                        <option value="<%= category.id %>"><%= category.title %></option>
                    <% }) %>
                </select>
                <textarea class="form-control" name="body" id="article" placeholder="Write the article here"></textarea>
                <button class="btn btn-success mt-3">Register</button>
            </form>
        </div>
    </div>
</div>

<%- include('../../partials/footer') %>

<script src="/tinymce/tinymce.min.js"></script>
<script src="/js/admin/articles/new.js"></script>