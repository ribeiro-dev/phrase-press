<%- include('../../partials/header.ejs') %>
<%- include('../../partials/navbar-home.ejs') %>

<body>
    <div class="container">
        <% result.articles.rows.forEach(article => { %>
            <div class="card my-5">
                <div class="card-header">
                    <h2><%= article.title %></h2>
                </div>

                <div class="card-body">
                    <a href="/<%= article.slug %>" class="btn btn-success">Read article</a>
                </div>
            </div>
        <% }) %>

        <div class="row">
            <div class="col col-12">
                <% if (result.page > 1) { %>
                    <a style="float:left" href="/articles/page/<%= result.page - 1 %>">Prev Page</a>
                <% } %>
                <% if (result.next) { %>
                    <a style="float:right" href="/articles/page/<%= result.page + 1 %>">Next Page</a>
                <% } %>
            </div>
        </div>
        <hr>
    </div>
</body>

<%- include('../../partials/footer.ejs') %>